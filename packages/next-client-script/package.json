{
  "name": "next-client-script",
  "version": "0.0.3",
  "description": "Add a separate client entry point to your Next.js pages.",
  "repository": "https://github.com/amannn/next-client-script",
  "author": "Jan Amann <jan@amann.me>",
  "license": "MIT",
  "files": [
    "ClientScript.*",
    "ClientScriptsByPath.*",
    "ClientWidget.*",
    "initWidgets.*",
    "withClientScripts.*"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "dev": "rm -rf ./dist && rollup -c rollup.config.js --watch",
    "build": "rm -rf ./dist && rollup -c rollup.config.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\" && tsc --noEmit",
    "prepublishOnly": "yarn lint && yarn build && cp dist/* . && cp ../../README.md ."
  },
  "dependencies": {
    "mini-css-extract-plugin": "^0.8.0",
    "next-transpile-modules": "^3.0.0",
    "webpack": "^4.0.0"
  },
  "peerDependencies": {
    "next": "^9.4.0",
    "react": "^16.13.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "13.0.0",
    "@rollup/plugin-typescript": "5.0.1",
    "@types/mini-css-extract-plugin": "0.9.1",
    "@types/next": "9.0.0",
    "@types/react": "16.9.41",
    "@types/react-dom": "16.9.8",
    "@types/webpack": "4.41.18",
    "@typescript-eslint/parser": "3.5.0",
    "babel-eslint": "10.1.0",
    "eslint": "7.3.1",
    "eslint-config-molindo": "4.0.2",
    "eslint-plugin-css-modules": "2.11.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.4",
    "prettier": "2.0.5",
    "rollup": "2.18.2",
    "tslib": "2.0.0",
    "typescript": "3.9.6"
  }
}
